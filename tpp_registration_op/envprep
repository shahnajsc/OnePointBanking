--Create main folder
	mkdir -p tpp_registration_op
	cd ~/tpp_registration_op

--Create subfolders
	mkdir -p conf cert config scripts

--Create virtual environment
	python3 -m venv .venv
	source .venv/bin/activate
--Create requirements.txt
	echo "requests\ncryptography\nPyJWT\npython-dotenv" > requirements.txt

--Install dependencies
	pip install -r requirements.txt
